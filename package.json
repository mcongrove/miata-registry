{
	"name": "miata-registry",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "tsc && vite build",
		"cypress:open": "cypress open",
		"cypress:run": "cypress run",
		"cypress:open:dev": "cypress open --config-file cypress.config.dev.js",
		"cypress:run:dev": "cypress run --config-file cypress.config.dev.js",
		"db:backup": "wrangler d1 export registry --remote --output=backups/registry-$(date +%s).sqlite",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:push": "drizzle-kit push:sqlite",
		"dev": "vite",
		"email:dev": "email dev --dir src/emails",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
		"lint": "eslint .",
		"preview": "vite preview",
		"test:e2e:headless": "start-server-and-test 'npm run dev' http://localhost:5173 'npm run worker:dev' http://localhost:8787 'cypress run --config-file cypress.config.dev.js'",
		"test:e2e": "start-server-and-test 'npm run dev' http://localhost:5173 'npm run worker:dev' http://localhost:8787 'cypress open --config-file cypress.config.dev.js'",
		"worker:build": "esbuild src/worker/index.ts --bundle --outfile=dist/worker.js --format=esm --platform=browser",
		"worker:deploy:prod": "wrangler deploy --keep-vars",
		"worker:deploy": "npm run worker:build && npx wrangler deploy --keep-vars",
		"worker:dev": "wrangler dev src/worker/index.ts --remote --env development"
	},
	"dependencies": {
		"@clerk/backend": "^1.21.4",
		"@clerk/clerk-react": "^5.21.0",
		"@cloudflare/workers-types": "^4.20241224.0",
		"@floating-ui/react": "^0.27.2",
		"@react-email/components": "0.0.31",
		"@react-google-maps/api": "^2.20.3",
		"@sentry/react": "^8.47.0",
		"@sentry/vite-plugin": "^2.22.7",
		"browser-image-compression": "^2.0.2",
		"crypto": "^1.0.1",
		"drizzle-orm": "^0.38.3",
		"hono": "^4.6.14",
		"jszip": "^3.10.1",
		"qrcode.react": "^4.2.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hot-toast": "^2.5.1",
		"react-router-dom": "^7.1.0",
		"resend": "^4.0.1",
		"tailwindcss": "^3.4.10"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"@testing-library/cypress": "^10.0.1",
		"@types/node": "^22.10.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.20",
		"csv-parse": "^5.6.0",
		"cypress": "^13.6.4",
		"cypress-real-events": "^1.13.0",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.1",
		"esbuild": "^0.20.0",
		"eslint": "^9.9.0",
		"postcss": "^8.4.45",
		"prettier": "^3.3.3",
		"react-email": "^3.0.4",
		"start-server-and-test": "^2.0.9",
		"tailwind-merge": "^2.6.0",
		"terser": "^5.37.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"vite": "^5.4.1",
		"vite-plugin-svgr": "^4.3.0",
		"wrangler": "^3.99.0"
	}
}
