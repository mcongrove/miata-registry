{
	"name": "miata-registry",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"seed": "NODE_OPTIONS=\"--loader ts-node/esm\" node --experimental-specifier-resolution=node scripts/seedDatabase.ts",
		"lint": "eslint .",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:push": "drizzle-kit push:sqlite",
		"db:backup": "wrangler d1 export registry --remote --output=backups/registry-$(date +%s).sqlite",
		"worker:build": "esbuild src/worker/index.ts --bundle --outfile=dist/worker.js --format=esm --platform=browser",
		"worker:deploy": "npm run worker:build && npx wrangler deploy --keep-vars",
		"worker:dev": "wrangler dev src/worker/index.ts --remote --env development"
	},
	"dependencies": {
		"@clerk/backend": "^1.21.4",
		"@clerk/clerk-react": "^5.21.0",
		"@cloudflare/workers-types": "^4.20241224.0",
		"@floating-ui/react": "^0.27.2",
		"@react-google-maps/api": "^2.20.3",
		"drizzle-orm": "^0.38.3",
		"hono": "^4.6.14",
		"jszip": "^3.10.1",
		"qrcode.react": "^4.2.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^7.1.0",
		"resend": "^4.0.1",
		"tailwindcss": "^3.4.10"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"@types/node": "^22.10.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.20",
		"csv-parse": "^5.6.0",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.1",
		"esbuild": "^0.20.0",
		"eslint": "^9.9.0",
		"postcss": "^8.4.45",
		"prettier": "^3.3.3",
		"tailwind-merge": "^2.6.0",
		"terser": "^5.37.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"uuid": "^11.0.3",
		"vite": "^5.4.1",
		"vite-plugin-svgr": "^4.3.0",
		"wrangler": "^3.99.0"
	}
}
